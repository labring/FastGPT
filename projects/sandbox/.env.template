# ===== Server =====
# Port the sandbox server listens on
SANDBOX_PORT=3000
# Auth token for API requests (empty = no auth)
SANDBOX_TOKEN=
# Log level: debug | info | warn | error
LOG_LEVEL=info

# ===== Resource Limits =====
# Default execution timeout per request (ms)
SANDBOX_TIMEOUT=10000
# Maximum allowed timeout per request (ms)
SANDBOX_MAX_TIMEOUT=60000
# Default memory limit per sandbox process (MB)
SANDBOX_MEMORY_MB=64
# Maximum allowed memory limit per sandbox process (MB)
SANDBOX_MAX_MEMORY_MB=256

# ===== Concurrency =====
# Maximum number of concurrent sandbox executions
SANDBOX_MAX_CONCURRENCY=50

# ===== Network Request Limits =====
# Maximum number of HTTP requests per execution
SANDBOX_MAX_REQUESTS=30
# Timeout for each outbound HTTP request (ms)
SANDBOX_REQUEST_TIMEOUT=10000
# Maximum response body size for outbound requests (bytes, default 2MB)
SANDBOX_MAX_RESPONSE_SIZE=2097152

# ===== Module Control =====
# JS allowed modules whitelist (comma-separated)
SANDBOX_JS_ALLOWED_MODULES=lodash,dayjs,moment,uuid,crypto-js,qs,url,querystring
# Python blocked modules blacklist (comma-separated)
SANDBOX_PYTHON_BLOCKED_MODULES=os,sys,subprocess,shutil,socket,ctypes,multiprocessing,threading,pickle,importlib,code,codeop,compile,compileall,signal,resource,gc,inspect,tempfile,pathlib,io,fileinput,urllib,http,requests,httpx,aiohttp
